# Backend environment variables (example)
# Do not commit real secrets. Copy to .env and fill values locally or in a secret manager.

# Core
SECRET_KEY=
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# URLs
BACKEND_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000

# Database and Cache
DATABASE_URL=postgresql://postgres:postgres@db:5432/cactus_wealth
REDIS_URL=redis://redis:6379/0

# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback

# Email (leave empty for local dev to avoid sending emails)
EMAIL_SERVER_HOST=
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=
EMAIL_SERVER_PASS=
EMAIL_FROM=

# Environment
ENVIRONMENT=development
DEBUG=true

# Security
SECRET_KEY=dev-secret-key-change-me

# API
API_V1_STR=/api/v1

# E2E testing
E2E_MODE=0
E2E_SECRET=
CREATE_TABLES_ON_STARTUP=1

