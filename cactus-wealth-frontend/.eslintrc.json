{
  "extends": ["next/core-web-vitals", "prettier"],
  "rules": {
    "no-console": ["off", { "allow": ["log", "info", "debug", "warn", "error"] }]
  },
  "overrides": [
    {
      "files": ["**/*.test.{ts,tsx}", "tests/**/*"],
      "rules": {
        "no-console": "off"
      }
    },
    {
      "files": ["app/api/**/*"],
      "rules": {
        "no-console": ["warn", { "allow": ["warn", "error"] }]
      }
    }
  ]
}
