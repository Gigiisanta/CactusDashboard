FROM node:20-alpine

WORKDIR /app

# ðŸ”¥ OPTIMIZATION: Copy ONLY package files first for better caching
COPY package.json package-lock.json* ./

# Install dependencies - This layer will be cached unless package*.json change
RUN npm ci

# ðŸ”¥ OPTIMIZATION: Copy source code AFTER installing dependencies
# This ensures dependency installation cache won't be invalidated by code changes
COPY . .

# Expose port
EXPOSE 3000

# Set environment
ENV NODE_ENV=development
ENV NEXT_TELEMETRY_DISABLED=1

# Start development server
CMD ["npm", "run", "dev"] 